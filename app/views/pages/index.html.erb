<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Escríbenos</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
              <div id="response"></div>
              <%= form_for(@contact, method: "post", name: "sentMessage", remote: true, novalidate: "") do |f| %>
                <div class="row">
                  <div class="col-md-6">
                      <div class="form-group">
                        <%=  f.text_field(:name, placeholder: "Tú Nombre*", required: true, "data-validation-required-message"=> "Por favor introduce tu nombre", class: "form-control") %>
                          <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group">
                        <%= f.email_field(:email, placeholder: "Tú Email*", required: true, "data-validation-required-message"=> "Por favor introduce tu email.", class: "form-control") %>
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group">
                        <%= f.telephone_field(:phone, placeholder:"Tú Teléfono*", required: true, class: "form-control", "data-validation-required-message"=>"Por favor introduce tu número de teléfono") %>
                          <p class="help-block text-danger"></p>
                      </div>
                  </div>
                  <div class="col-md-6">
                      <div class="form-group">
                        <%= f.text_area(:message, placeholder: "Tu mensaje*", required: true, "data-validation-required-message"=> "Por favor introduce un mensaje.", class: "form-control") %>
                        <p class="help-block text-danger"></p>
                      </div>
                  </div>
                  <div class="clearfix"></div>
                  <div class="col-lg-12 text-center">
                      <div id="success"></div>
                      <%= f.submit "Enviar Mensaje", class: "btn btn-xl" %>
                  </div>
              </div>
            <% end %>
        </div>
    </div>
</section>
